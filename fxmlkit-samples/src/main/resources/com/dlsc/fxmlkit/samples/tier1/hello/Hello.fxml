<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="20"
      xmlns:fx="http://javafx.com/fxml" stylesheets="Hello.css"
      fx:controller="com.dlsc.fxmlkit.samples.tier1.hello.HelloController">

    <Label text="FxmlKit - Tier 1 Demo" styleClass="title-label"/>
    <Label fx:id="greetingLabel" text="Hello, World!" styleClass="greetings-label"/>

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="nameField" promptText="Enter your name"/>
        <Button text="Say Hello" onAction="#onSayHello"/>
    </HBox>
</VBox>